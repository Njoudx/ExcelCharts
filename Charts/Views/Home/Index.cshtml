@{
    ViewBag.Title = "Home Page";
}
<!--Div that will hold the pie chart-->
<div class="container" id="chart_div"></div>

<!--Load the AJAX API-->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', { 'packages': ['corechart'] });

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {
        var json = JSON.parse(@ViewBag.Json);
        // Create the data table.
        var data = new google.visualization.DataTable(json);
        data.addColumn('string', 'Labels');
        data.addColumn('number', 'Values');
        data.addRows([
            ['@ViewBag.Labels[0]', @Int32.Parse(ViewBag.Values[0])],
            ['@ViewBag.Labels[1]', @Int32.Parse(ViewBag.Values[1])],
            ['@ViewBag.Labels[2]', @Int32.Parse(ViewBag.Values[2])],
            ['@ViewBag.Labels[3]', @Int32.Parse(ViewBag.Values[3])]
        ]);


        // Set chart options
        var options = {
            'title': 'How Many Requests',
            'width': 800,
            'height': 800
        };

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(data, options);
    }
</script>